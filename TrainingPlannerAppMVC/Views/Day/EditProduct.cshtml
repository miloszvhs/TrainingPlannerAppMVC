@model TrainingPlannerAppMVC.Application.ViewModels.ProductVm.DayProductVm.NewDayProductVm

@{
    ViewData["Title"] = "EditProduct";
    
    string proteins = "0";
    string carbs = "0";
    string fat = "0";
    string weight = "0";
    
    if(Model.ProductDetails != null)
    {
        fat = Model.ProductDetails.Calories.Fat.ToString().Replace(",", ".");
        carbs = Model.ProductDetails.Calories.Carbs.ToString().Replace(",", ".");
        proteins = Model.ProductDetails.Calories.Proteins.ToString().Replace(",", "."); 
        weight = Model.ProductDetails.Weight.ToString().Replace(",", "."); 
    }
}
<h4>Edit Product</h4>
<hr />
<div class="d-flex justify-content-center row">
    <div class="col-md-4">
        <form asp-action="EditProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control"/>
            <input type="hidden" asp-for="DayId" class="form-control"/>
            <input type="hidden" asp-for="ProductDetails.Id" class="form-control"/>
            <div class="form-group">
                <label asp-for="ProductDetails.Name" class="control-label"></label>
                <input asp-for="ProductDetails.Name" class="form-control"/>
                <span asp-validation-for="ProductDetails.Name" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="ProductDetails.Calories.Fat" class="control-label"></label>
                <input asp-for="ProductDetails.Calories.Fat" class="form-control" value="@fat"/>
                <span asp-validation-for="ProductDetails.Calories.Fat" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="ProductDetails.Calories.Carbs" class="control-label"></label>
                <input asp-for="ProductDetails.Calories.Carbs" class="form-control" value="@carbs"/>
                <span asp-validation-for="ProductDetails.Calories.Carbs" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="ProductDetails.Calories.Proteins" class="control-label"></label>
                <input asp-for="ProductDetails.Calories.Proteins" class="form-control" value="@proteins"/>
                <span asp-validation-for="ProductDetails.Calories.Proteins" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="ProductDetails.Weight" class="control-label"></label>
                <input asp-for="ProductDetails.Weight" class="form-control" value="@weight"/>
                <span asp-validation-for="ProductDetails.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
        <div>
            <a asp-action="Details" asp-route-dayId="@Model.DayId">Back</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
